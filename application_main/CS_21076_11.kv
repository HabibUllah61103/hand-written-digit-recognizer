<AdminProfile>:
    name: "admin_profile"

    MDGridLayout:
        cols: 1

        MDToolbar:
            title: "Administrator Profile"
            halign: "center"
            md_bg_color: [150/255,200/255,150/255,255/255]
            id: layout
            elevation: 15
            left_action_items: [["arrow-left", lambda x: root.manager.callback("admin", "right"), "Back"]]

        ScrollView:
            MDGridLayout:
                cols: 1
                padding: dp(20)
                spacing: dp(20)
                row_force_default: True
                row_default_height: 40
                size_hint_y: None
                height: self.minimum_height
                id: admin_profile_info_grids
