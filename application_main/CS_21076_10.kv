<Admin>:
    name: "admin"

    MDGridLayout:
        cols: 1

        MDToolbar:
            title: "Administrator"
            halign: "center"
            md_bg_color: [150/255,200/255,150/255,255/255]
            id: layout
            elevation: 15

        ScrollView:
            MDList:
                OneLineListItem:
                    text: "Profile"
                    on_release:
                        app.root.current = "admin_profile"
                        root.manager.transition.direction = "left"

                OneLineListItem:
                    text: "Customers Information"
                    on_release:
                        app.root.current = "admin_customer_info"
                        root.manager.transition.direction = "left"

                OneLineListItem:
                    text: "Products Information"
                    on_release:
                        app.root.current = "admin_product_info"
                        root.manager.transition.direction = "left"

                OneLineListItem:
                    text: "Logout"
                    on_release:
                        app.root.current = "admin_login"
                        root.manager.transition.direction = "right"
                        root.logout("current_admin.csv")

