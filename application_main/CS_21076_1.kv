#:set w dp(700)
#:set h dp(540)


Manager:
    Intro:
    CustomerLogin:
    CustomerSignUp:
    CustomerProfile:
    Product:
    CurrentCart:
    ShoppingHistory:
    AdminLogin:
    AdminSignUp:
    Admin:
    AdminProfile:
    AdminCustomerInfo:
    AdminProductView:


<Intro>:
    name: "intro"

    canvas.before:
        Color:
            rgba: .9, .9, .9, .3
        Rectangle:
            size: self.size

    MDLabel:
        id: intro_title_label
        text: "HDAAAI"
        font_name: "time_new_romans.ttf"
        font_size: 90
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .8}

    MDGridLayout:
        cols: 1
        spacing: "15dp"
        size_hint: None, None
        size: "200dp", "100dp"
        pos_hint: {"center_x": .5, "center_y": .3}

        MDRectangleFlatButton:
            id: intro_customer_button
            text: "Sign In"
            size_hint: (.01, .01)
            font_size: 18
            font_name: "time_new_romans.ttf"
            on_release: app.root.current = "customer_login"

        MDRectangleFlatButton:
            id: intro_admin_button
            text: "Sign Up"
            size_hint: (.01, .01)
            font_size: 18
            font_name: "time_new_romans.ttf"
            on_release: app.root.current = "customer_sign_up"