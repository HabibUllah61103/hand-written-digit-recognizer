#: include CS_21075_2.kv
#: include CS_21075_3.kv
#: include CS_21075_4.kv
#: include CS_21075_5.kv
#: include CS_21075_7.kv


#:set w dp(700)
#:set h dp(540)


Manager:
    Intro:
    CustomerLogin:
    CustomerSignUp:
    CustomerProfile:
    Product:
    ShoppingHistory:

<Intro>:
    name: "intro"

    canvas.before:
        Color:
            rgba: .9, .9, .9, .3
        Rectangle:
            size: self.size

    MDLabel:
        id: intro_title_label
        text: "NNEzy"
        font_name: "time_new_romans.ttf"
        font_size: 120
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .7}

    MDLabel:
        id: intro_second_label
        text: "BY HDAAAI"
        font_name: "time_new_romans.ttf"
        font_size: 25
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .6}
    
    MDLabel:
        id: intro_second_label
        text: "Handwritten Digit Recognizer using Neural Network"
        font_size: 15
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .55}

    MDGridLayout:
        cols: 1
        spacing: "15dp"
        size_hint: None, None
        size: "200dp", "100dp"
        pos_hint: {"center_x": .5, "center_y": .3}

        MDRectangleFlatButton:
            id: intro_customer_button
            text: "Sign In"
            size_hint: (.01, .01)
            font_size: 18
            font_name: "time_new_romans.ttf"
            on_release: app.root.current = "customer_login"

        MDRectangleFlatButton:
            id: intro_admin_button
            text: "Sign Up"
            size_hint: (.01, .01)
            font_size: 18
            font_name: "time_new_romans.ttf"
            on_release: app.root.current = "customer_sign_up"